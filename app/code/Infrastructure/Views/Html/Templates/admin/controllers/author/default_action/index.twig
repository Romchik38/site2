{#
    object          data            
#}

<div class="container-md my-3">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>

        {% if data.authorList|length == 0 %} 
            {% include controller_template_dir ~ '/zero_authors.twig' with {'translate': translate} only %}
        {% else %}
            {% include controller_template_dir ~ '/authors.twig' with {'authorList': data.authorList, 'translate': translate, 'paginationHtml': data.paginationHtml, 'paginationForm': data.paginationForm, 'u': u } only %}
        {% endif %}

    </div>
</div>