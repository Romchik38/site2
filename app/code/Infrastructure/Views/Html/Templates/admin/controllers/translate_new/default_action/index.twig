{% set newUrl = u.fromArray(['root', 'admin', 'translate', 'new']) %}

<div class="container-md my-3">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>
        <!-- Form -->
        <form action="{{ newUrl }}" method="post">
            <div class="form-group mb-2 p-2">
                <div class="mb">
                    <label class="form-label" for="{{ data.idFiled }}">Id: {{ translate.identifier }}</label>
                    <input type="text" class="form-control" name="{{ data.idFiled }}" value="">
                </div>
            </div>
            <input type="hidden" name="{{ data.csrfTokenField }}" value="{{ data.csrfToken }}" />
            <!-- Translates -->
            {% include controller_template_dir ~ '/blocks/phrases.twig' with {'t': t, 'u': u, 'data': data } only %}
            <div class="d-flex ">
                <div class="me-auto">
                    <button type="submit" class="btn btn-primary my-2">Create</button>
                </div>
            </div>
        </form>
        <!-- Back link -->
        <div class="my-3">⬅️ Back to <a href="{{ u.fromArray(['root', 'admin', 'translate']) }}">Translate list</a> page</div>
    </div>
</div>

