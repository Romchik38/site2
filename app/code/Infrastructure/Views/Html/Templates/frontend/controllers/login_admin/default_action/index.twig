{#
    Object          u           Urlbuilder
    Object          data        Romchik38\Site2\Infrastructure\Controllers\Actions\GET\Login\Admin\DefaultAction\ViewDTO
#}

<div class="container-sm">
    <div class="row justify-content-center">
        <h1 class="text-center">{{ data.name }}</h1>
            <div class="text-center">
                <span class="error_message text-center bg-secondary text-white">{{ data.message }}</span>
            </div>
            {% if data.adminUser is null %}
                <p class="lead">On this page you can provide your admin login credentials. Yor account must be active. Please, contact <a href="#">support</a> on any issue.</p>
                <div class="col-sm-4">
                    <h2 class="text-center">Provide Login Credentials</h2>
                    <form class="border rounded-3 p-4" action="{{ data.authUrl }}" method="post">
                        <label for="{{ data.userNameField }}">Enter your user name: </label>
                        <input class="form-control" type="text" name="{{ data.userNameField }}" id="{{ data.userNameField }}" required /><br>
                        <label for="{{ data.passwordField }}">Enter password: </label>
                        <input class="form-control" type="password" name="{{ data.passwordField }}" id="{{ data.passwordField }}" required /><br>
                        <input class="btn btn-secondary" type="submit" value="Log In" />
                        <input type="hidden" name="{{ data.csrfTokenField }}" value="{{ data.csrfToken }}" />
                    </form>
                    <br>
                </div>
            {% else %}
                <p>You already logged in. Please visit <a href="{{ u.fromArray(['root', 'admin']) }}">Admin Page</a>.</p>
            {% endif %}
    </div>
</div>