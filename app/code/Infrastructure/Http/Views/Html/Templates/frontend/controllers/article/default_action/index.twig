{# 
    data                        - Controller DTO
    data.getArticles()          - a list of ArticleDTO
    controller_template_dir     - path to the file's folder
#}

{% include controller_template_dir ~ '/css/index.twig' %}

<div id="content" class="container-fluid p-0 mt-2">
    <div class="container-xxl p-0">
        <!-- Banner -->
        <div class="container-fluid border border-info">
            Banner
        </div>
        <!-- Banner -->

        <!-- H1 Start -->
        <div class="container my-4">
            <div class="row">
                <h1 class="text-center">{{ data.getName() }}</h1>
                <p class="col-11 mx-auto lead my-3">{{ data.getDescription() }}</p>
            </div>
        </div>
        <!-- H1 end -->

        <!-- Block Latest publication start -->
        <div class="container-fluid">
            <div class="row">
                <!-- Main start -->
                <div class="col-xxl-9">
                    <div class="container-lg">
                        <h2 class="h5">{{ translate.t('article.h2.publications') }}</h2>
                        {% set articles = data.getArticles() %}
                        {% if articles|length == 0 %} 
                            {% include controller_template_dir ~ '/zero_articles.twig' with {'translate': translate} only %}
                        {% else %}
                        <!-- refactor -->
                            {% include controller_template_dir ~ '/articles.twig' with {'articles': articles, 'translate': translate, 'article_page_url': data.articlePageUrl } only %}
                        {% endif %}
                    </div>
                    <hr>
                </div>
                <!-- Main end -->
                <!-- Aside block start -->
                <div class="col-xxl-3">
                    <h2 class="h4">Most Visited</h2>
                    <div class="row my-3">
                        <div class="col-9">
                            <h5>Most visited title 1 lorem lore</h5>
                            <footer class="container p-0 text-secondary d-flex">
                                <div class="font-monospace comments me-3">30 min watch</div>
                                <div class="font-monospace comments">yesterday</div>
                            </footer>
                        </div>
                        <div class="col-3 text-center">
                            <img class="img-fluid"
                                src="/img.php?id=4&type=webp&width=100&height=100" alt="Coming soon"
                                width="100px">
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col-9">
                            <h5>Most visited title 1 lorem lore</h5>
                            <footer class="container p-0 text-secondary d-flex">
                                <div class="font-monospace comments me-3">30 min watch</div>
                                <div class="font-monospace comments">yesterday</div>
                            </footer>
                        </div>
                        <div class="col-3 text-center">
                            <img class="img-fluid"
                                src="/img.php?id=4&type=webp&width=100&height=100" alt="Coming soon"
                                width="100px">
                        </div>
                    </div>
                    <hr>
                </div>
                <!-- Aside block end -->
            </div>
        </div>
        <!-- Block Latest publication end -->

        <!-- pagination -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xxl-9">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm justify-content-center">
                            {{ data.showPagination()|raw }}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </div>
</div>