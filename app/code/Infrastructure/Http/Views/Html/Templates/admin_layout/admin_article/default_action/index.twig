{% set createUrl = u.fromArray(['root', 'admin', 'article', 'new' ]) %}

<div class="container-md">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>

        {% if data.articleList|length == 0 %} 
            {% include controller_template_dir ~ '/zero_articles.twig' with {'translate': translate, 'createUrl': createUrl} only %}
        {% else %}
            {% include controller_template_dir ~ '/articles.twig' with {'data': data, 't': translate, 'u': u, 'createUrl': createUrl} only %}
            <!-- refactor -->
        {% endif %}

    </div>
</div>