{% extends "base_admin_layouts.twig" %}

{% block content %}
{% set newUrl = u.fromArray(['root', 'admin', 'banner', 'new' ]) %}

<div class="container-md my-3">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>

        {% if data.banners|length == 0 %} 
            {% include template_full_prefix ~ '/zero_banners.twig' with {'t': translate, 'newUrl': newUrl} only %}
        {% else %}
            {% include template_full_prefix ~ '/banners.twig' with {'data': data, 't': translate, 'u': u, 'newUrl': newUrl } only %}
        {% endif %}

    </div>
</div>
{% endblock %}