{#
    Object      u                       urlbuilder              {{ u.fromArray(['root', 'product']) }}
    string      template_full_prefix path to this folder
#}

{% extends "base_admin_layouts.twig" %}

{% block content %}
    <div class="container-sm">
        <div class="row">
            <h1 class="text-center">{{ data.name }}</h1>
            <p class="lead description">{{ data.description }}</p>
        </div>
        <div class="row">
            {% set blockPath = template_full_prefix ~ '/blocks/' %}
            {% include blockPath ~ 'articles.twig' %}
            {% include blockPath ~ 'audios.twig' %}
            {% include blockPath ~ 'authors.twig' %}
            {% include blockPath ~ 'banners.twig' %}
            {% include blockPath ~ 'categories.twig' %}
            {% include blockPath ~ 'images.twig' %}
            {% include blockPath ~ 'languages.twig' %}
            {% include blockPath ~ 'pages.twig' %}
            {% include blockPath ~ 'translates.twig' %}
            {% include blockPath ~ 'users.twig' %}
        </div>    
    </div>
{% endblock %}