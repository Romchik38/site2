{% extends "base_admin_layouts.twig" %}

{% block content %}
<div class="container-md my-3">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>
    </div>
    <p>Total images in storage: {{ data.totalCount }}</p>
    <p>Memory usage: {{ data.totalPrettySize }}</p>
    <form action="{{ u.fromArray(['root', 'admin', 'imagecache', 'clear']) }}" method="post">
        <input type="hidden" name="{{ visitor.getCsrfTokenField() }}" value="{{ visitor.getCsrfToken() }}" />
        <button class="btn btn-secondary py-0 align-top px-1" type="submit">Clear</button>
    </form>
</div>
{% endblock %}