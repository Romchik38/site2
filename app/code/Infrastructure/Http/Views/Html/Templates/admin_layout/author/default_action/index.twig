{% extends "base_admin_layouts.twig" %}

{% block content %}
{%  set  urlNew = u.fromArray(['root', 'admin', 'author', 'new']) %}

<div class="container-md my-3">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>

        {% if data.authorList|length == 0 %} 
            {% include template_full_prefix ~ '/zero_authors.twig' with {'translate': translate, 'urlNew': urlNew} only %}
        {% else %}
            {% include template_full_prefix ~ '/authors.twig' with {'data': data, 'authorList': data.authorList, 'translate': translate, 'paginationHtml': data.paginationHtml, 'paginationForm': data.paginationForm, 'u': u, 'urlNew': urlNew } only %}
        {% endif %}

    </div>
</div>
{% endblock %}