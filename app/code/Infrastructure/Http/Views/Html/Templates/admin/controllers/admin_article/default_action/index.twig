<div class="container-md">
    <div class="row">
        <h1 class="text-center">{{ data.name }}</h1>
        <p>{{ data.description }}</p>

        {% if data.articleList|length == 0 %} 
            {% include controller_template_dir ~ '/zero_articles.twig' with {'translate': translate} only %}
        {% else %}
            <!-- refactor -->
            {% include controller_template_dir ~ '/articles.twig' with {'articleList': data.articleList, 't': translate, 'u': u, 'paginationHtml': data.paginationHtml, 'paginationForm': data.paginationForm } only %}
        {% endif %}

    </div>
</div>