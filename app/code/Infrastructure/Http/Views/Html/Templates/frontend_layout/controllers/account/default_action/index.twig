{# 
    Object      data                    Controller DTO
    string      template_full_prefix    path to this folder
#}

{% extends "base_layouts.twig" %}

{% block content %}
{% set page = data.page %}
<div class="container-sm">
    <div class="row mb-4">
        <h1 class="text-center">{{ page.getName() }}</h1>
        <p class="lead mt-5 p-3 bg-light border-start border-5">{{ page.getShortDescription() }}</p>
    </div>
    <div class="row mb-4">
        {% include template_full_prefix ~ '/blocks/card.twig' with {'t': t, 'u': u, 'data': data } only %}
    </div>    
    <div class="row mb-4">
        {% include template_full_prefix ~ '/blocks/user-data.twig' with {'t': t, 'u': u, 'data': data } only %}
    </div> 
    <div class="row mb-4 justify-content-center">
        {% include template_full_prefix ~ '/blocks/offers.twig' with {'t': t, 'u': u, 'data': data } only %}
    </div>        
    <div class="row mb-4">
        {{ page.getDescription()|raw }}
    </div>
</div>
{% endblock %}