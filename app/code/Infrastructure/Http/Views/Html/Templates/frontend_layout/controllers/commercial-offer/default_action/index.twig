{% extends "base_layouts.twig" %}

{% block content %}
{% set page = data.page %}
<div class="container-sm">
    <div class="row my-4">
        <h1 class="text-center">{{ page.getName() }}</h1>
        <p class="lead p-3 bg-light border-start border-5">{{ page.getShortDescription() }}</p>
    </div>
    <div class="row mb-4">
        <div class="col">
            {{ page.getDescription()|raw }}
        </div>
    </div>
    <form class="col-sm-6 api-commercial-offer-form mx-auto border p-2 border-secondary border-3 rounded" style="display: none">
        <p class="h2">{{ translate.t('page.commercial-offer.form.header') }}</p>
        <div class="mb-3">
            <label for="formInputFullName" class="form-label">{{ translate.t('Full name') }}:</label>
            <input type="text" class="form-control" id="formInputFullName" placeholder="{{ translate.t('form.placeholder.full name') }}" required>
        </div>   
        <div class="mb-3">
            <label for="formInputEmail" class="form-label">Email:</label>
            <input type="email" class="form-control" id="formInputEmail" placeholder="name@example.com" required>
        </div>
        <div class="mb-3">
            <label for="formInputPhone" class="form-label">{{ translate.t('Phone') }}:</label>
            <input type="text" class="form-control" id="formInputPhone" placeholder="+3800000000" required>
        </div>        
        <div class="mb-3">
            <label for="formInputCompany" class="form-label">{{ translate.t('Company') }}:</label>
            <input type="text" class="form-control" id="formInputCompany" placeholder="{{ translate.t('form.placeholder.company-name') }}" required>
        </div>
        <div class="mb-3">
            <label for="formInputCompanyField" class="form-label">{{ translate.t('Field of business') }}:</label>
            <input type="text" class="form-control" id="formInputCompanyField" placeholder="{{ translate.t('form.placeholder.field-of-business') }}" required>
        </div>
        <button type="submit" class="btn btn-secondary mb-3">{{ translate.t('Send') }}</button>
    </form>
</div>
<script type="module" src="/media/js/frontend/controllers/commercial-offer/default/index.js" fetchpriority="low"></script>
{% endblock %}