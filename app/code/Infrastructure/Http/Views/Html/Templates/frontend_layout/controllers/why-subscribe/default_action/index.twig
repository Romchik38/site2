{% extends "base_layouts.twig" %}

{% block content %}
{% set page = data.page %}
<div class="container-sm">
    <div class="row mb-4">
        <div class="col">
            <h1 class="text-center">{{ page.getName() }}</h1>
            <p class="lead mt-5 p-3 bg-light border-start border-5">{{ page.getShortDescription() }}</p>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col">
            {{ page.getDescription()|raw }}
        </div>
    </div>
    <form class="col-sm-6 api-why-subscribe-form mx-auto border p-2 border-secondary border-3 rounded" style="display: none">
        <div class="mb-3">
            <label for="formInput1" class="form-label">Email:</label>
            <input type="email" class="form-control" id="formInput1" placeholder="name@example.com" required>
        </div>
        <button type="submit" class="btn btn-secondary mb-3">{{ translate.t('Subscribe') }}</button>
    </form>
</div>
<script type="module" src="/media/js/frontend/controllers/why-subscribe/default/index.js" fetchpriority="high"></script>
{% endblock %}