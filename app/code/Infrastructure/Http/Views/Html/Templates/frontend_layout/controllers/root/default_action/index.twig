{% extends "base_layouts.twig" %}

{% block content %}
<div id="content" class="container-fluid p-0 mt-2 text-center">
    <!-- 1st row start Banner-->
    {% set banner = data.banner %}
    {% include template_full_prefix ~ '/blocks/banners.twig' with {'translate': t, 'u': u, 'banner': banner, 'imageFrontendPath': imageFrontendPath } only %}
    <!-- 1st row end -->
    <div class="container-xxl">
        <!-- 2nd row start News -->
        <div class="container-fluid">
            <h1 class="text-center my-4">{{ translate.t('root.news-header') }}</h1>
            <div class="row">
                <!-- Main start -->
                <div class="col-sm-12 col-xxl-9">
                    <!-- News start -->
                    {% include template_full_prefix ~ '/blocks/articles.twig' with {'translate': t, 'u': u, 'articles': data.articleList, 'imageFrontendPath': imageFrontendPath } only %}      
                    <!-- News end -->
                    <hr>
                </div>
                <!-- Main end -->
                <!-- Aside start -->
                <div class="col-sm-12 col-md-6 mx-md-auto col-xxl-3">
                    <!-- Statistic -->
                    <div>
                        <h5 class="text-center">{{ translate.t('root.statistic.name') }}</h5>
                        <p>{{ translate.t('root.statistic.description') }}</p>
                        <ul class="list-group">{{ translate.t('root.statistic.body')|raw }}</ul>
                    </div>
                    <!-- Advertisement -->
                    <div class="mt-3">
                        <h5 class="text-center">{{ translate.t('root.ads.name') }}</h5>
                        <p>{{ translate.t('root.ads.body')|raw }}</p>
                        <a href="{{ u.fromArray(['root', 'advertising-on-the-website']) }}">{{ t.t('root.ads.link') }}</a>
                    </div>
                    <hr>
                </div>
                <!-- Aside end -->
            </div>
        </div>
        <!-- 2nd row end News -->
        <!-- 3d row start Video -->
        <div class="container-fluid mt-1">
            <div class="row">
                <!-- Main start -->
                <div class="col-xxl-9">
                    <div class="container-fluid">
                        <h2 class="text-center">Latest Videos</h2>
                        <div class="row">
                            <div class="col-sm-10 mx-sm-auto col-md-4 mb-3">
                                <video class="img-fluid mb-1" src="/media/video/video1.mp4" controls
                                    crossorigin="anonymous"
                                    poster="/media/img/videos/placeholders/video-placeholder.png"></video>
                                <h5>The Code of Ukraine on Administrative Offenses</h5>
                                <p class="h6">Legislative changes that come into effect from the beginning of the
                                    year
                                    and should be thoroughly prepared for.</p>
                                <footer class="row text-secondary">
                                    <div class="col-6 font-monospace comments">30 min watch</div>
                                    <div class="col-6 font-monospace comments">yesterday</div>
                                </footer>
                            </div>
                            <div class="col-sm-10 mx-sm-auto col-md-4 mb-3">
                                <video class="img-fluid" src="/media/video/video2.mp4" controls
                                    crossorigin="anonymous"
                                    poster="/media/img/videos/placeholders/video2-1920-placeholder.jpeg"></video>
                                <h5>Driver conduct rules during document and vehicle inspection by police officers
                                </h5>
                                <p class="h6">In less than a month, new rules for document and vehicle inspections
                                    will
                                    come into force. Detailed information about the innovations and possible
                                    consequences.</p>
                                <footer class="row text-secondary">
                                    <div class="col-6 font-monospace comments">15 min watch</div>
                                    <div class="col-6 font-monospace comments">morning</div>
                                </footer>
                            </div>
                            <div class="col-sm-10 mx-sm-auto col-md-4 mb-3">
                                <video class="img-fluid" src="/media/video/video3.mp4" controls
                                    crossorigin="anonymous"
                                    poster="/media/img/videos/placeholders/video3-1920-placeholder.jpg"></video>
                                <h5>Rights and duties of the employees of territorial recruitment centers</h5>
                                <p class="h6">A detailed review of the rights and duties of employees of the
                                    territorial
                                    recruitment centers (TRCs) in connection with recently adopted legal acts.
                                    Everything you need to know to avoid legal issues.</p>
                                <footer class="row text-secondary">
                                    <div class="col-6 font-monospace comments">45 min watch</div>
                                    <div class="col-6 font-monospace comments">2 days ago</div>
                                </footer>
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
                <!-- Main end -->
            </div>
        </div>
        <!-- 3d row end Video -->
        <!-- 4th row start Сourse schedule -->
        <div class="container mt-3">
            <div class="row">
                <!-- Main start -->
                <div class="col-xxl-9">
                    <h2 class="text-center">Courses schedule</h2>
                    <!-- Courses start -->
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6 col-md-4 mx-md-auto col-lg-4 mb-2">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h4 class="card-title">General administrative law</h4>
                                        <p class="card-text">A basic course on administrative law consisting of
                                            theory,
                                            history, and practical application in Ukraine. Required for completing
                                            other
                                            courses.</p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Date - 10 sep 2025</li>
                                        <li class="list-group-item">Type - online</li>
                                        <li class="list-group-item">Duration - 30 classes / 10 weeks</li>
                                    </ul>
                                    <footer class="card-footer">
                                        <a class="card-link" href="#">Course details</a>
                                    </footer>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-4 mx-md-auto col-lg-4 mb-2">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h4 class="card-title">The process of reviewing administrative cases in
                                            courts
                                            of all instances</h4>
                                        <p class="card-text">The judicial system of the country. Participants and
                                            procedure for case proceedings. Decisions and the procedure for
                                            appealing in
                                            higher courts.</p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Date - 01 dec 2025</li>
                                        <li class="list-group-item">Type - offline</li>
                                        <li class="list-group-item">Duration - 60 classes / 20 weeks</li>
                                    </ul>
                                    <footer class="card-footer">
                                        <a class="card-link" href="#">Course details</a>
                                    </footer>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-4 mx-md-auto col-lg-4 mb-2">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h4 class="card-title">Preparation for the bar exam</h4>
                                        <p class="card-text">Prepare yourself for the bar exam. With the help of our
                                            professional trainers, you will be able to reinforce the knowledge
                                            you've
                                            previously acquired and approach the exam fully prepared.</p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Date - 25 jan 2025</li>
                                        <li class="list-group-item">Type - online</li>
                                        <li class="list-group-item">Duration - 9 classes / 3 weeks</li>
                                    </ul>
                                    <footer class="card-footer">
                                        <a class="card-link" href="#">Course details</a>
                                    </footer>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Courses end -->
                    <hr>
                </div>
                <!-- Main end -->
                <!-- Aside start -->
                <div class="col-md-8 col-lg-6 mx-auto col-xxl-3">
                    <!-- Statistic -->
                    <div>
                        <h5 class="text-center">Why to subscribe?</h5>
                        <p>We offer the following benefits for subscribers to our website</p>
                        <ul>
                            <li>The latest and thoroughly verified information</li>
                            <li>Access to video and audio content at any time</li>
                            <li>Opportunity for free participation in training courses</li>
                            <li>Opportunity to use discounts when taking training courses</li>
                            <li>Special offers from partners</li>
                        </ul>
                        <form class="col d-grid gap-2 mt-3">
                            <button class="btn background-secondary" type="submit">
                                Subscribe
                            </button>
                        </form>
                    </div>
                </div>
                <!-- Aside end -->
            </div>
        </div>
        <!-- 4th row end Сourse schedule -->
        <!-- 5th row start Course teachers -->
        <div class="container">
            <div class="row">
                <!-- Main start -->
                <div class="col-xxl-9">
                    <h2 class="text-center my-4">Courses teachers</h2>
                    <div class="container-fluid">
                        <!-- 1st row teacher start-->
                        <div class="row">
                            <div class="col-sm-6 col-md-4 mx-md-auto col-lg-4 mb-3">
                                <div class="card h-100">
                                    <img src="/media/img/teachers/teacher1-1200.jpg" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h5 class="card-title">Administrative law</h5>
                                        <p class="card-text">
                                            10 years of practice and 5 years of teaching in the field of
                                            administrative
                                            law
                                        </p>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a href="#">See courses</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-4 mx-md-auto col-lg-4 mb-3">
                                <div class="card h-100">
                                    <img src="/media/img/teachers/teacher2-1200.jpg" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h5 class="card-title">Administrative process</h5>
                                        <p class="card-text">
                                            20 years of teaching in the field of administrative law and process.
                                            Professor.
                                        </p>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a href="#">See courses</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-4 mx-md-auto col-lg-4 mb-3">
                                <div class="card h-100">
                                    <img src="/media/img/teachers/teacher3-1200.jpg" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h5 class="card-title">General administrative law</h5>
                                        <p class="card-text">
                                            10 years of teaching the theory of administrative law. Head of the
                                            department at the national university.
                                        </p>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a href="#">See courses</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- 1st row teacher end-->
                    </div>
                    <hr>
                </div>
            </div>
        </div>
        <!-- 5th row end Course teachers -->
        <!-- 6th row start Latest Audio -->
        <div class="container">
            <div class="row">
                <!-- Main start -->
                <div class="col-xxl-9">
                    <h2 class="text-center mb-4">Podcasts</h2>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="d-flex flex-column h-100">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="d-flex flex-column h-100">
                                                <div class="col">
                                                    <img class="img-fluid" src="/media/img/audio/seat_belt.webp"
                                                        alt="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="col">
                                                <h5>Automobile seat belt</h5>
                                                <p class="h6">Traffic Rules 2024. What new?</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="h-100"></div>
                                    <audio src="/media/audio/audio1.mp3" controls crossorigin="anonymous">Listen
                                        audio</audio>
                                    <footer class="text-secondary d-flex">
                                        <div class="font-monospace comments me-3">comments(1)</div>
                                        <div class="font-monospace comments">yesterday</div>
                                    </footer>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="d-flex flex-column h-100">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="d-flex flex-column h-100">
                                                <div class="col">
                                                    <img class="img-fluid" src="/media/img/audio/timeframes.webp"
                                                        alt="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="col">
                                                <h5>Timeframes for administrative cases</h5>
                                                <p class="h6">New timeframes for case review. What this could mean
                                                    for the
                                                    defense.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="h-100"></div>
                                    <audio src="/media/audio/audio2.mp3" controls crossorigin="anonymous">Listen
                                        audio</audio>
                                    <footer class="text-secondary d-flex">
                                        <div class="font-monospace comments me-3">comments(5)</div>
                                        <div class="font-monospace comments">a week ago</div>
                                    </footer>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="d-flex flex-column h-100">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="d-flex flex-column h-100">
                                                <div class="col">
                                                    <img class="img-fluid" src="/media/img/audio/special_means.webp"
                                                        alt="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="col">
                                                <h5>Special means</h5>
                                                <p class="h6">Cases of the use of special means.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="h-100"></div>
                                    <audio src="/media/audio/audio3.mp3" controls crossorigin="anonymous">Listen
                                        audio</audio>
                                    <footer class="text-secondary d-flex">
                                        <div class="font-monospace comments me-3">no comments yet</div>
                                        <div class="font-monospace comments">2 days ago</div>
                                    </footer>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                    <p><a href="#">Listen more audio</a></p>
                </div>
            </div>
        </div>
        <!-- 6th row end Latest Audio -->
    </div>
</div>
{% endblock %}