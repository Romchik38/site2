<div class="container-fluid background-secondary text-light">
    <div class="row py-1">
        <div class="col">
            <div class="ms-md-5">
                <span class="me-2">Link1</span>
                <span class="me-2">Link2</span>
                <span class="me-2">Link3</span>
            </div>
        </div>
        <div class="col-md-2">
            <select class="language text-white background-secondary p-0" style="border: 0">

                {% for language in meta_data.languages %}
                    {% set selected = language == meta_data.language ? 'selected' : '' %}
                    <option value="{{loop.index}}" {{selected}}>{{translate.t('global.language')}}</option>
                {% endfor %}
                <!-- 
                <option value="1" selected>English</option>
                <option value="2">Українська</option> 
                -->
            </select>
        </div>
    </div>
</div>